.el-dialog {
  font-size: 12px;
  display: flex;
  flex-direction: column;
  box-shadow: 8px 8px 8px #444;
  border-radius: 4px;

  &.asp-smart-dialog-dynamic {
    // max-height: 70vh;

    .el-dialog__header {
      display: flex;
      justify-content: left;
      border-bottom: 1px solid #dee9fc;
      padding: 15px 20px;

      .el-dialog__title {
        display: block;
        font-family: MicrosoftYaHei-Bold;
        font-weight: 700;
        font-size: 16px;
        color: #53607e;
      }

      .el-dialog__headerbtn {
        top: 15px;
        font-size: 18px;

        .el-dialog__close {
          color: #909399;

          &:hover {
            color: #5584ff;
          }
        }
      }
    }

    .el-dialog__body {
      display: flex;
      flex-grow: 1;
      padding: 0px !important;
      font-size: 12px;
      overflow: hidden;

      .asp-smart-dialog__body {
        //滚动条内置
        overflow-y: auto;
        padding: 15px 20px;

        .el-form {
          .el-form-item__label {
            font-size: 12px;
          }

          .el-form-item__content {
            font-size: 12px;

            .el-input {
              font-size: 12px;

              .el-input__inner {
                font-size: 12px;
              }
            }
          }
        }
      }

      .asp-smart-dialog__footer {
        border-top: 1px solid #dfe9fc;
        text-align: right;
        background: #f1f5fa;
        padding: 10px 20px;
        overflow: hidden;
      }
    }
  }
}

// 按钮样式
.solid-with-icon-btn {
  font-size: 14px !important;
  border-radius: 4px !important;
  background: linear-gradient(1turn, #4576e4, #6f9ef0) !important;
  color: #fff !important;
  padding: 7px 15px;
}

.hollow-with-icon-btn {
  font-size: 14px !important;
  color: #4676e5 !important;
  background: #fff !important;
  border-color: #419fff !important;
  padding: 7px 15px;
}